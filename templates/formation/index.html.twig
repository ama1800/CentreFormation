{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Nos Formations</h1>
    <div class="headforum">
        <nav class="navbar navbar-inverse">
            <table class="table">
                <thead class="table-active">
                    <tr>
                        <th>Formation</th>
                        <th>Description</th>
                        <th>Categorie</th>
                        <th>Actions</th>
                    </tr>
                </thead>
{% for formation in formations %}
                <tbody class="table-light">
                    <tr>
                        <td><a href="{{ path('formation_show', {'id': formation.id}) }}">{{ formation.libelle }}</a></td>
                        <td><p>{{ formation.description }}</p></td>
                        <td><a href="{{ path('categorie_show', {'id': formation.categorie.id}) }}">{{ formation.categorie.libelle }}</a></td>
                        <td>
                            <a href="{{ path('formation_show', {'id': formation.id}) }}">show</a>
                            <a href="{{ path('formation_edit', {'id': formation.id}) }}">edit</a>
                        </td>
                    </tr>
                </tbody>
{% else %}
                <tbody class="table table-striped table-dark">
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                </tbody>
{% endfor %} 
            </table>
        </nav>
    </div>

    <a href="{{ path('formation_new') }}">Create new</a>
{% endblock %}
