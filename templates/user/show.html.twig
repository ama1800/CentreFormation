{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-warning">{{ user.civilite ? 'Monsieur' : 'Madame' }} {{ user.nom }} {{ user.prenom }}</h1>
<div class="card border-success mb-3" style="max-width: 25rem;">
  <div class="card-header">user ID: {{ user.id }}<br>
  </div>
  <div class="card-body text-success">
    <h6 class="card-title">DATE DE NAISSANCE : {{ user.dateNaissance ? user.dateNaissance|date('d-m-Y') : '' }}</h6>
    <p class="card-text">ADRESSE : <br>{{ user.adresse }}<br> {{ user.cp }}<br> {{ user.commune }}</p>
    <h6>{{user.email}}</h6>
  </div>
</div>
<div style="display: flex;">
    <a style=" margin-right:1%; width: 10%" href="{{ path('user_index') }}" class="btn btn-primary">Collegues</a>
    <a style=" margin-right: 1%; width: 10%" href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
    {{ include('user/_delete_form.html.twig') }}
</div><br><br>
    {#  #}
{% endblock %}
