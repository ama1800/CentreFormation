{% if app.user.id == user.id or is_granted("ROLE_SUPER_ADMIN") %}
<form method="post" action="{{ path('user_delete', {'id': user.id}) }}"
    onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce compte?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger" style="margin-left: 10%;">Supprimer</button>
</form>
{% else %}
<span style="color: red">Vous n'etes pas autoriser à modifier ou à supprimer à ce contenu..!</span>
{% endif %}